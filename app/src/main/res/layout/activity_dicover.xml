<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".DiscoverActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr" android:textDirection="ltr"
        android:orientation="horizontal">

        <EditText
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:maxLength="8"
            android:hint="Enter ID" android:text="" android:textSize="20dp" android:textColor="#6935E6"
            android:id="@+id/etQueryId"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvControl" android:hint="Control digit" android:textSize="20dp" android:textColor="#6935E6"
            android:layout_marginLeft="20dp" android:paddingLeft="10dp"
            android:text=""/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" android:layoutDirection="ltr" android:textDirection="ltr">

        <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/btnDiscoverControl"
            android:textColor="#FFFFFF"
            android:text="Discover" android:background="#0000FF" />

    </LinearLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center" android:gravity="center" android:textDirection="ltr" android:layoutDirection="ltr"
        android:layout_marginTop="70dp"
        android:id="@+id/btnGoBackId"
        android:text="Go Back" android:textColor="#000000"/>

</LinearLayout>